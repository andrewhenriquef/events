/* ------------------------------------------------------------*/
/* BASIC SETUP */
/* ------------------------------------------------------------*/

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    background-color: #fff;
    color: #555;
    font-family: sans-serif;
    font-weight: 300;
    font-size: 20px;
    text-rendering: optimizeLegibility;
}

.clearfix {zoom: 1}
.clearfix:after {
    content: '.';
    clear: both;
    display: block;
    height: 0;
    visibility: hidden;
}

/* ------------------------------------------------------------*/
/* REUSABLE COMPONENTS */
/* ------------------------------------------------------------*/

.row {
    max-width: 1140px !important;
    margin: 0 auto;/*top and right --> bottom and left get the same definition */
}

section {
    padding: 80px 0;
}

/*--------HEADINGS-------------*/

h1, h2, h3 {
    font-weight: 300;
    text-transform: uppercase;
}

h1 {
    margin-top: 0;
    margin-bottom: 20px;
    color: #fff;
    font-size: 375% !important;
    word-spacing: 3px;
    letter-spacing: 1px;
}

h2 {
    font-size: 200%;
    word-spacing: 2px;
    text-align: center;
    margin-bottom: 30px;
    letter-spacing: 1px;
}

h3 {
    font-size: 110%;
    margin-bottom: 15px;
    
}

h2:after {
    display: block;
    height: 2px;
    background-color: #c0392b;
    content: " ";
    width: 100px;
    margin: 0 auto;
    margin-top: 30px;
}

/*----- BUTTONS -----*/

.btn:link, 
.btn:visited,
input[type=submit]{
    display: inline-block;
    padding: 10px 30px;
    font-weight: 300;
    text-decoration: none;
    border-radius: 200px;
    transition: background-color 0.2s, border 0.2s, color 0.2s;
}

.btn-full:link,
.btn-full:visited,
input[type=submit] {
    background-color: #c0392b;
    border: 1px solid #c0392b;
    color: #fff;
    margin-right: 15px;
}

.btn-ghost:link,
.btn-ghost:visited {
    border: 1px solid #c0392b;
    color: #c0392b;
}

.btn:hover,
.btn:active,
input[type=submit]:hover,
input[type=submit]:active {
    background-color: #962d22;
}

.btn-full:hover,
.btn-full:active,
input[type=submit] {
    border: 1px solid #c0392b;
}

.btn-ghost:hover,
.btn-ghost:active {
    border: 1px solid #c0392b;
    color: #fff;

}

/*----- PARAGRAPHS -----*/

.long-copy {
    line-height: 145%;
    width: 70%;
    margin-left: 15%;
}

.box p {
    font-size: 90%;
    line-height: 145%;
}

/*----- ICONS -----*/

.icon-big {
    font-size: 350%;
    display: block;
    color: #c0392b;
    margin-bottom: 10px;
}


/* ------------------------------------------------------------*/
/* HEADER */
/* ------------------------------------------------------------*/

header {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(<%= asset_path 'party-crowd.jpg' %>);
    background-size: cover;
    background-position: center;
    height: 100vh;
    background-attachment: fixed;
}

.hero-text-box {
    position: absolute;
    width: 1140px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.logo { 
    height: 100px;
    width: auto;
    float: left;
    margin-top: 20px;
}

.main-nav {
    float: right;
    list-style: none;
    margin-top: 55px;
    
}

.main-nav li {
    display: inline-block;
    margin-left: 40px;
}

.main-nav li a:link,
.main-nav li a:visited {
    padding: 8px 0;
    color: #fff;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 140%;
    border-bottom: 2px solid transparent;
    transition: border-bottom 0.2s;
}

.main-nav li a:hover,
.main-nav li a:active {
    border-bottom: 2px solid #c0392b; 
}


/* ------------------------------------------------------------*/
/* ABOUT */
/* ------------------------------------------------------------*/

.section-about .long-copy {
    margin-bottom: 30px;
}


/* ------------------------------------------------------------*/
/* EVENTS */
/* ------------------------------------------------------------*/

.section-events {
    background-color: #f4f4f4;
}

.events-box {
    height: 70px !important;
    margin: 10px 0px 0px 0px !important;
    text-align: center;
    font-size: 90%;
}

.events-box:first-child {
    text-align: right;
    padding-right: 3%;
    margin-top: 30px;
}

.events-box:last-child {
    margin-top: 70px;
    padding-left: 3%;
}

.app-screen {
    width: 40%;
}

.event {
    margin-bottom: 0px !important;
}

.event h3 {
    margin-bottom:0px;
    padding-top: 5px;
}

.event:last-of-type {
    margin-bottom: 80px;
}

.event div {

    color: #c0392b;
    border: 2px solid #c0392b;
    display: inline-block;
    border-radius: 50%;
    height: 55px;
    width: 55px;
    text-align: center;
    padding: 10px;
    float: left;
    font-size: 150%;
    margin-right: 25px;
}

.event p {
    padding-top: 5px;
}

.btn-app:link,
.btn-app:visited {
    border: 0;
}


/* ------------------------------------------------------------*/
/* Adventures */
/* ------------------------------------------------------------*/


.section-adventures {
    padding: 0;
}

.adventures-showcase {
    list-style: none;
    width: 100%;
    margin-bottom: 0;
    padding: 0;
}

.adventures-showcase li {
    display: block;
    float: left;
    width: 25%;

}

.adventures-photo {
    width: 100%;
    margin: 0;
    overflow: hidden;
    background-color: #000;
}

.adventures-photo img {
    opacity: 0.7;
    width: 100%;
    height: auto;
    transform: scale(1.17);
    transition: transform 0.5s, opacity 0.5s;
}

.adventures-photo img:hover {
    opacity: 1;
    transform: scale(1.05);
}


/* ------------------------------------------------------------*/
/* CONTACTS */
/* ------------------------------------------------------------*/


.section-contacts {
    background-image: linear-gradient(rgba(0, 0, 0, 0.8) , rgba(0, 0, 0, 0.8)), url(<%= asset_path 'meeting-time.jpg' %>);
    background-size: cover;
    color: #fff;
    background-attachment: fixed;
}

blockquote {
    text-align:center;
    color:#fff;
    padding: 2%;
    font-style: italic;
    line-height: 145%;
    position: relative;
    margin-top: 40px;
}

blockquote:before {
    content: "\201c";
    font-size: 500%;
    display: block;
    position: absolute;
    top: -5px;
    left: -5px;
}

cite {
    font-size: 130%;
    margin-top: 25px;
    display: block;
}

cite img {
    height: 45px;
    border-radius: 50%;
    margin-right: 10px;
    vertical-align: middle;
}

.section-contacts h2{
    color: #fff;
}


/* ------------------------------------------------------------*/
/* FOOTER */
/* ------------------------------------------------------------*/

footer {
    background-color: #333;
    padding: 50px;
    font-size: 80%;
}

.footer nav {
    list-style: none;
    float: left;
}

.social-links {
    list-style: none;
    float: right;
}

.footer-nav li,
.social-links li {
    display: inline-block;
    margin-right: 30px;
}

.footer-nav li:last-child,
.social-links li:last-child {
    margin: 0;
}

.footer-nav li a:link,
.footer-nav li a:visited,
.social-links li a:link,
.social-links li a:visited {
    text-decoration: none;
    border: 0;
    color: #888;
    transition: color 0.2s;
}

.footer-nav li a:hover,
.footer-nav li a:active {
    color: #ddd;
}

.social-links li a:link,
.social-links li a:visited{
    font-size: 160%;   
}

.ion-social-twitter,
.ion-social-linkedin,
.ion-social-github {
    transition: color 0.2s;
}

.ion-social-twitter:hover {
    color: #55acee;
}

.ion-social-github:hover {
    color: #fff;
}

.ion-social-linkedin:hover {
    color: #007bb6;
}

footer p {
    color: #888;
    text-align: center;
    margin-top: 20px;
}


